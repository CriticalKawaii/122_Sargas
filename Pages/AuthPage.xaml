<Page x:Class="_122_Sargas.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:_122_Sargas.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Авторизация">

    <Grid HorizontalAlignment="Center"
          Width="800"
          Height="450"
          VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*" />
            <ColumnDefinition Width="529*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="217*" />
            <RowDefinition Height="233*" />
        </Grid.RowDefinitions>

        <Label Content="Пароль"
               x:Name="labelPass"
               Margin="173,188,0,232"
               HorizontalAlignment="Left"
               Width="64"
               Grid.RowSpan="2" />
        <TextBox x:Name="TextBoxLogin"
                 Background="Transparent"
                 Margin="62,0,0,75"
                 TextWrapping="Wrap"
                 ToolTip="Введите логин или почту"
                 TextChanged="TextBoxLogin_TextChanged"
                 Height="34"
                 VerticalAlignment="Bottom"
                 HorizontalAlignment="Left"
                 Width="134"
                 Grid.Column="1" />
        <PasswordBox x:Name="PasswordBox"
                     Background="Transparent"
                     ToolTip="Введите пароль"
                     Margin="0,0,333,0"
                     HorizontalAlignment="Right"
                     Width="134"
                     Height="32"
                     VerticalAlignment="Bottom"
                     Grid.Column="1"
                     PasswordChanged="PasswordBox_PasswordChanged" />
        <Button x:Name="ButtonEnter"
                Margin="69,20,0,0"
                Height="34"
                Content="Вход"
                ToolTip="Кнопка входа"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Click="ButtonEnter_Click" />
        <Button x:Name="ButtonReg"
                Margin="69,68,0,0"
                Height="37"
                Content="Регистрация"
                ToolTip="Кнопка регистрации"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Click="ButtonReg_Click" />
        <Button x:Name="ButtonChangePassword"
                Margin="69,120,0,0"
                Height="37"
                Content="Смена пароля"
                ToolTip="Кнопка смены пароля"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Click="ButtonChangePassword_Click" />
    </Grid>
</Page>
