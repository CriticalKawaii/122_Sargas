<Page x:Class="_122_Sargas.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:_122_Sargas.Pages"
      mc:Ignorable="d"
      MinWidth="350"
      MaxWidth="350"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      d:Background="White"
      Title="Авторизация">

    <StackPanel>

        <TextBlock Text="Вход в личный кабинет"
                   x:Name="labelPass"
                   HorizontalAlignment="Center" />

        <TextBox x:Name="TextBoxLogin"
                 Background="Transparent"
                 ToolTip="Введите логин или почту"
                 MaxLength="64"
                 TextChanged="TextBoxLogin_TextChanged" />
        <PasswordBox x:Name="PasswordBox"
                     Background="Transparent"
                     ToolTip="Введите пароль"
                     MaxLength="64"
                     PasswordChanged="PasswordBox_PasswordChanged" />

        <Button x:Name="ButtonEnter"
                Content="Вход"
                ToolTip="Кнопка входа"
                Click="ButtonEnter_Click" />

        <Button x:Name="ButtonReg"
                ToolTip="Кнопка регистрации"
                Click="ButtonReg_Click"
                Style="{StaticResource ButtonSecondary}">
            <TextBlock Text="Регистрация" />
        </Button>
        
        <Button x:Name="ButtonChangePassword"
                Content="Смена пароля"
                ToolTip="Кнопка смены пароля"
                Click="ButtonChangePassword_Click" />
    </StackPanel>
</Page>
