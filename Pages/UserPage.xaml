<Page x:Class="_122_Sargas.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:_122_Sargas.Pages"
      mc:Ignorable="d"
      d:Background="#FF9ACBBA"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <WrapPanel 
                   HorizontalAlignment="Center">
            <TextBlock Text="Введите ФИО для поиска:"
                       VerticalAlignment="Center" />
            <TextBox  x:Name="fioFilterTextBox"
                      MinWidth="100"
                      TextChanged="fioFilterTextBox_TextChanged" />
            <TextBlock Text="Сортировка по ФИО:"
                       VerticalAlignment="Center" />
            <ComboBox SelectionChanged="sortComboBox_SelectionChanged"
                      x:Name="sortComboBox"
                      SelectedIndex="0"
                      >
                <ComboBoxItem Content="По возрастанию" />
                <ComboBoxItem Content="По убыванию" />
            </ComboBox>
            <CheckBox IsChecked="False"
                      Checked="onlyAdminCheckBox_Checked"
                      Unchecked="onlyAdminCheckBox_Unchecked"
                      Content="Только администраторы"
                      x:Name="onlyAdminCheckBox"
                      VerticalContentAlignment="Center"
                       />
            <Button x:Name="clearFiltersButton"
                    Content="Очистить фильтр"
                    Click="clearFiltersButton_Click" />
        </WrapPanel>

        <ListView Name="ListUser"
                  Grid.Row="1"
                  HorizontalContentAlignment="Center"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                               HorizontalAlignment="Center">
                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="200"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Width="200"
                               Grid.Row="1"
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"
                               Source="{Binding Photo, TargetNullValue='pack://application:,,,/images/default.png', FallbackValue='pack://application:,,,/images/default.png'}" />


                        <TextBlock VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   Width="200"
                                   Grid.Row="0"
                                   TextWrapping="Wrap"
                                   Text="{Binding FIO}"
                                   HorizontalAlignment="Center"
                                   FontSize="18"
                                   FontWeight="Bold" />
                        
                        <TextBlock VerticalAlignment="Center"
                                   TextAlignment="Left"
                                   Width="200"
                                   Grid.Row="2"
                                   HorizontalAlignment="Center"
                                   FontSize="18"
                                   Text="{Binding Role}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
