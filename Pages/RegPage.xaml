<Page x:Class="_122_Sargas.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:_122_Sargas.Pages"
      mc:Ignorable="d"
      MinWidth="350"
      MaxWidth="350"
      d:Background="#FF9ACBBA"
      Title="RegPage">

    <StackPanel>
        <TextBlock Text="Регистрация"
                   HorizontalAlignment="Center"
                   FontWeight="Black" />

        <TextBlock Text="Логин:"
                   Name="textBlockLogin" />

        <TextBox x:Name="TextBoxLogin"
                 ToolTip="Введите логин или почту"
                 MaxLength="64"
                 d:Text="test" />

        <TextBlock Text="ФИО:"
                   Name="textBlockFIO" />

        <TextBox x:Name="TextBoxFIO"
                 ToolTip="Введите ФИО"
                 MaxLength="64" />

        <TextBlock Text="Пароль:"
                   Name="textBlockPassword" />

        <PasswordBox x:Name="PasswordBox"
                     ToolTip="Введите пароль"
                     MaxLength="64"
                     d:Password="test" />

        <TextBlock Text="Подтвердите пароль:"
                   Name="textBlockPasswordConfirm" />

        <PasswordBox x:Name="PasswordBoxConfirm"
                     ToolTip="Введите пароль"
                     MaxLength="64"
                     d:Password="test" />

        <TextBlock Text="Выберите роль:"
                   Name="textBlockRole" />

        <ComboBox Name="comboBoxRole"
                  ToolTip="Выберите роль">
            <ComboBoxItem Content="User" />
            <ComboBoxItem Content="Admin" />
        </ComboBox>

        <Button x:Name="ButtonReg"
                Content="Зарегистрироваться"
                ToolTip="Кнопка входа"
                Click="ButtonReg_Click"
                IsDefault="True" />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0, 10">
            <TextBlock Text="Есть аккаунт?"
                       Name="textBlockHaveAcc" />

            <Button x:Name="ButtonEnter"
                    ToolTip="Кнопка регистрации"
                    Click="ButtonEnter_Click"
                    Style="{DynamicResource  ButtonSecondary}">
                <TextBlock Text="Войти"
                           Style="{DynamicResource  TextBlockSecondaryButton}" />
            </Button>
        </StackPanel>


    </StackPanel>
</Page>
