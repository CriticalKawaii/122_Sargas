<Page x:Class="_122_Sargas.Pages.AdminPages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:_122_Sargas.Pages.AdminPages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      d:Background="#FF9ACBBA"
      Title="AddCategoryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">

            <TextBlock Text="Название категории"
                       Grid.Row="0"
                       VerticalAlignment="Center" />
            <TextBox x:Name="TBCategoryName"
                     Grid.Row="0"
                     Width="300"
                     MaxLength="64"
                     Text="{Binding Name}"
                     VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center">
            <Button x:Name="ButtonSaveCategory"
                    Content="Сохранить"
                    Click="ButtonSaveCategory_Click" />
            <Button x:Name="ButtonClean"
                    Content="Очистить"
                    Click="ButtonClean_Click" />
        </StackPanel>

    </Grid>
</Page>
