<Page x:Class="_122_Sargas.Pages.AdminPages.PaymentTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:_122_Sargas.Pages.AdminPages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      d:Background="#FF9ACBBA"
      Title="PaymentTabPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="377*" />
            <RowDefinition Height="73*" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0"
                  x:Name="DataGridPayment"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата"
                                    Binding="{Binding Date}" />
                <DataGridTextColumn Header="Пользователь"
                                    Binding="{Binding Users.FIO}" />
                <DataGridTextColumn Header="Название"
                                    Binding="{Binding Name}" />
                <DataGridTextColumn Header="Количество"
                                    Binding="{Binding Num}" />
                <DataGridTextColumn Header="Сумма"
                                    Binding="{Binding Price}" />
                <DataGridTextColumn Header="Категория"
                                    Binding="{Binding Category.Name}" />
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="ButtonEdit"
                                    Content="Редактировать"
                                    ToolTip="Редактировать данные"
                                    Click="ButtonEdit_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1"
                x:Name="ButtonAdd"
                ToolTip="Добавить данные"
                Content="Добавить"
                HorizontalAlignment="Left"
                Click="ButtonAdd_Click" />
        <Button Grid.Row="1"
                x:Name="ButtonDel"
                ToolTip="Удалить данные"
                Content="Удалить"
                HorizontalAlignment="Right"
                Click="ButtonDel_Click" />
    </Grid>
</Page>
